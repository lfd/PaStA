IS_PATCHWORK_ARCHIVE=${1}
LISTNAME=${2}
BASEDIR=${3}
VICTIM=${4}

INDEX=${BASEDIR}/index/raw.${LISTNAME}

function die {
	echo "$@" 1>&2
	exit -1;
}

function sort_lists {
	sort -u $INDEX -o $INDEX
}

function initialise {
	mkdir -p $BASEDIR || die "Unable to create basedir"
	touch ${INDEX}
}
